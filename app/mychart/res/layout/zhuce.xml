<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f9f9fb"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#12b7f5"
            android:orientation="horizontal"
            >
        <Button
                android:id="@+id/zhucefanhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="返回"
                android:textColor="#fff"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="注册账号"
                  android:textSize="21sp"
                  android:textColor="#fff"
                  android:layout_marginLeft="79dp"
                  android:layout_gravity="center"
                />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:background="#f0f0f2"
            android:padding="2dp"
            android:layout_marginTop="17dp"
            >
        <TextView
                android:layout_width="127dp"
                  android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="账号："
                android:textSize="21sp"
                android:textColor="#14abe2"
                android:background="#fff"
                />
        <EditText
                android:id="@+id/zhuecenum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:hint="请输入账号"
                android:textSize="21sp"
                android:textColor="#14abe2"
                />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:background="#f0f0f2"
            android:padding="2dp"
            >
        <TextView
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="密码："
                android:textSize="21sp"
                android:textColor="#14abe2"
                android:background="#fff"
                />
        <EditText
                android:id="@+id/zhuecepass1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:hint="请输入密码"
                android:textSize="21sp"
                android:textColor="#14abe2"
                android:inputType="textPassword"
                />

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:background="#f0f0f2"
            android:padding="2dp"
            >
        <TextView
                android:layout_width="127dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:text="确认密码："
                android:textSize="21sp"
                android:textColor="#14abe2"
                android:background="#fff"
                />
        <EditText
                android:id="@+id/zhuecepass2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:hint="请再次输入密码"
                android:textSize="21sp"
                android:textColor="#14abe2"
                android:inputType="textPassword"
                />

    </LinearLayout>
    <Button android:id="@+id/zhueceanniu"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="18dp"
            android:text="注册"
            android:textColor="#000"
            android:textSize="19sp"
            android:background="@drawable/button_background"
            />


</LinearLayout>